<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <ol>
    <% @order_line_items.each do | item |%>
      <%= render 'item', product: item[:product_id], quantity: item[:quantity], orderemail: @order.email%>
      <% end %>
    </ol>
  </div>

  <div class="mb-4">
  Order Email: <%= @order.email%><br>
  You're Order total is <%= humanized_money_with_symbol @order.total_cents / 100%>. Thank you for shopping with us!
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
